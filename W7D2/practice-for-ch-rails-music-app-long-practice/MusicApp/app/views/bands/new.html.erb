<form action="<%= bands_url %>" method="post">
    <% flash.each do |key, value| %>
        <% if key == "error" %>
            <% value.each do |error| %>
                <p><%= error %></p>
            <% end %>
        <% end %>
    <% end %>
    <%= auth_token %>
    <label for="name">Name</label>
    <input type="text" name="band[name]" id="name">
    <input type="submit" value="Add Band">

</form>
